BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: mile_input
            size_hint_x: 0.7
            font_size: 28
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.3
            Button:
                text: 'Up'
                font_size: 16
                on_press: app.handle_up()
            Button:
                text: 'Down'
                font_size: 16
                on_press: app.handle_down()
    Button:
        text: 'Convert miles to km'
        on_press: app.handle_convert()
        font_size: 20
    Label:
        id: km_output
        font_size: 42
        color: 1,1,0,1